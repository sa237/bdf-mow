<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="196dp"
    tools:layout_editor_absoluteY="204dp"
    android:background="@color/pastel_blue"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".UserProfile">



        <TextView
            android:id="@+id/settings_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/setting_heading_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/settings_heading"/>



        <Button
            android:id="@+id/setting_btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_bg"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setting_heading_sub" />

        <Button
            android:id="@+id/setting_btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg"
            android:text="Update Email"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="@id/setting_btn2"
            app:layout_constraintStart_toStartOf="@+id/setting_btn2"
            app:layout_constraintTop_toBottomOf="@+id/setting_btn2" />

        <Button
            android:id="@+id/setting_btn4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg"
            android:text="Payment History"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="@id/setting_btn3"
            app:layout_constraintStart_toStartOf="@+id/setting_btn3"
            app:layout_constraintTop_toBottomOf="@+id/setting_btn3" />

        <Button
            android:id="@+id/setting_btn6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="View Chats"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@id/setting_btn4"
            app:layout_constraintStart_toStartOf="@+id/setting_btn4"
            app:layout_constraintTop_toBottomOf="@+id/setting_btn4" />





        <Button
            android:id="@+id/setting_btn5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="View Pickups"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/setting_btn6"
            app:layout_constraintStart_toStartOf="@+id/setting_btn6"
            app:layout_constraintTop_toBottomOf="@+id/setting_btn6" />









    </androidx.constraintlayout.widget.ConstraintLayout>





    </ScrollView>