    <TextView
        android:id="@+id/acceptance_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="You have a new request from a user. Would you like to go ahead and accept it?"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/user_loc_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="USER LOCATION"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/acceptance_txt"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginTop="40dp"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/user_loc_final"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_loc_heading"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <Button
        android:id="@+id/accept_btn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_loc_final"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:layout_marginLeft="40dp"
        android:backgroundTint="@color/green_accept"
        android:background="@drawable/layout_bg"
        android:textColor="@color/white"
        android:text="Accept"
        android:textSize="20dp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/decline_btn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_loc_final"
        android:background="@drawable/layout_bg"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/red_decline"
        android:textColor="@color/white"
        android:text="Decline"
        android:textSize="20dp"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>