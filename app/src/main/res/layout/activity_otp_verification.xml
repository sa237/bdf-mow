    <Button
        android:id="@+id/verifyOtpBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn_bg"
        android:text="Verify and Sign In"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/OtpTxt"
        app:layout_constraintStart_toStartOf="@id/OtpTxt"
        app:layout_constraintTop_toBottomOf="@+id/OtpTxt" />

    <LinearLayout
        android:id="@+id/otp_linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_marginLeft="75dp"
        app:layout_constraintEnd_toEndOf="@+id/loginButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/OtpTxt"
        app:layout_constraintTop_toBottomOf="@+id/verifyOtpBtn">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't get the OTP?"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/resend_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend OTP"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/black" />

    </LinearLayout>


